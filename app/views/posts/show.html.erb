<h1> <%= @post.title %> </h1>

<% if current_user.try(:admin?) %>
  <p><%= link_to "Edit this post", edit_post_path %></p>
<% end %>

<p><%= simple_format(@post.body) %></p>

<h2>Comments (from newest to oldest) </h2>
<div class="comments-container">
  <%= render @post.comments.order(created_at: :desc) %>
</div>

<% if user_signed_in? %>
  <%= render 'comments/form' %>
<% end %>

<%= link_to "Return to Home", root_path %>